<h1>Create Scientist Form</h1>
<% if flash[:errors] %>
    <% flash[:errors].each do |error| %>
        <p style="color: red;"><%= error %></p>
    <% end %>
<% end %>

<%= form_for @scientist do |f| %>
    <p><%= f.label :name %>
    <%= f.text_field :name %></p>
    <p><%= f.label :field_of_study %>
    <%= f.text_field :field_of_study %></p>
    <%= f.submit %>
<% end %>